<h1>商品詳細</h1>
    <section class="product-box">
        <span class="image">
            <%= attachment_image_tag @product, :image, fallback:"no_image.png", size:"50x50" %>
        </span>
        <div class="status-box">
            <div class="status3">
            <p>
            <% if @product.stock_number > 0 %>
                在庫残り<%= @product.stock_number %> 枚
            <p class="status2">販売中</p>
            <% else %>
                在庫残り0枚
            <p class="status2">品切</p>

            <% end %>
            </p>
            </div>        </div>
    <section class="col-xs-4">
        <p class="product-item">商品名：</p><br>
        <p class="product-item">CD名：</p><br>
        <p class="product-item">アーティスト名：</p><br>
        <p class="product-item">レーベル名：</p><br>
        <p class="product-item">ジャンル：</p><br>
        <p class="product-item">価格：</p>
    </section>
    <% @product.cds.each do |cd| %>
    <section class="col-xs-4">
        <span class="product">
            <span class="text">
                <p class="productname"><%= cd.product.productname %></p>
                <p class="cdname"><%= cd.cdname %></p>
                <p class="artist"><%= cd.product.artist.artistname %></p>
                <p class="label"><%= cd.product.label.labelname %></p>
                <p class="genre"><%= cd.product.genre.genrename %></p>
                <p class="price">¥<%= cd.product.price %></p>
            </span>
        </span>
    </section>

    <section class="col-xs-4">
        <% cd.songs.each do |song| %>
            <p class="song"><%= song.songname %></p>
        <% end %>
    </section>
        <%= link_to "edit", edit_admin_product_path(@product.id)%>
        <%= link_to "destroy", admin_product_path(@product.id), method: :delete, data:{confirm: "商品削除しますか？"} %>
    <% end %>
    </section>
        <% if user_signed_in? %>
                <% if @product.stock_number > 0 %>
                    <%= form_for @cart,url:product_cart_products_path(@product) do |f| %>
                        <p class="texts">購入枚数:</p>
                        <%= f.select :purchase_number, @product.quantity %><br>
                        <%= f.submit "カートに追加",class:"btn btn-success" %>
                    <% end %>
                <% end %>
            <% else %>
        <% end %>


