<h1>ジャンルの追加</h1>
<div class="form-box">
<%= form_for @genre, :url => { :controller => :genre, :action => :create } do |g| %>
    <p class="form"><%= g.text_field :genrename, :placeholder => "ジャンル名" %></p>
    <br>
    <p class="add"><%= g.submit "ジャンルを追加する" %></p>
<% end %>
</div>

<style>
    h1{
        text-align:center;
    }

    .form-box{
        width:40%;
        height:10%;
        margin:0 auto;
    }

    .form{
        margin-top:5%;
        margin-left:30%;
    }

    .add{
        margin-left:33%;
    }
</style>