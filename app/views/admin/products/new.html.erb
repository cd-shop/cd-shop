

<%= form_for @product, url:admin_products_path do |p| %>
    <%= p.text_field :productname, :placeholder => "商品名"  %> <br>
    <%= p.number_field :price, :placeholder => "値段" %><br>
    <%= p.attachment_field :image, format: 'jpeg', size: "100x100", fallback:"no_image.png" %>
    <%= p.select :sale_status, Product.sale_statuses.keys, :selected => Product.sale_statuses[@product.sale_status]%><br>

    <%= p.submit "商品を追加する"%>
<% end %>

