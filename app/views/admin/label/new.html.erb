<h1>レーベルの追加</h1>
<div class="form-box">
<%= form_for @label, :url => { :controller => :label, :action => :create } do |g| %>
    <p class="form"><%= g.text_field :labelname, :placeholder => "レーベル名" %></p>
    <br>
    <p class="add"><%= g.submit "レーベル追加する" %></p>
<% end %>
</div>


<style>
    h1{
        text-align:center;
    }

    .form-box{
        width:40%;
        height:10%;
        margin:0 auto;
    }

    .form{
        margin-top:5%;
        margin-left:30%;
    }

    .add{
        margin-left:33%;
    }
</style>