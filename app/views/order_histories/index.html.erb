    <% @all_products.each do |order| %>
        <%= order.id%>:
        <%= order.address_number %>
        <%= order.prefecture %>
        <%= order.municipality %>
        <%= order.building %>
        <%= order.subtotal %>
        <%= order.postage %>

    <% end %>

        <section class="product-box">
        <% @order_histories.each do |order| %>
        <% if current_user.admin? || current_user.id == order.user_id %>

        <section class="left">
            <span class="product">
                <%= link_to product_path(order.product.id) do %>
                <span class="image">
                    <%= attachment_image_tag order.product, :image, fallback:"no_image.png", size:"50x50" %>
                </span>
                <% end %>
                <span class="text">
                    <p class="song"><%= order.product.productname %></p><br>
                    <p class="artist"><%= order.product.artist.artistname %></p><br>
                    <p class="price">¥<%= order.product.price %></p>
                    <p class="price">購入枚数：<%= order.quantity %>枚</p>
                </span>
            </span>
        </section>
<% end %>
        <% end %>
        </section>
        <p class="price">購入日時：<%= @order_histories.first.created_at.strftime('%Y/%m/%d/%H:%M') %></p><br>



        <p class="price">合計金額<%= @order_histories.first.total_amount %>円</p>

