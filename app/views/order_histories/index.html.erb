<h2>購入履歴一覧</h2>
<p class="song">購入者:<%= @user.name %><%= @user.lastname %>様</p>

<section class="product-box">
        <% @order_histories.each do |order| %>
                    <section class="left">
                        <span class="product">
                            <span class="image">
                                <%= attachment_image_tag order.product, :image, fallback:"no_image.png", size:"50x50" %>
                            </span>
                            <span class="text">

                                <p class="song"><%= order.productname %></p>
                                <p class="artist"><%= order.artistname %></p>
                                <p class="price">購入日時<%= order.created_at.strftime('%Y/%m/%d/%H:%M') %></p>
                                <p class="price"><%= link_to "詳細はこちら", user_order_path(order.user_id, order.order.id)  %></p>

                            </span>
                        </span>
                    </section>

        <% end %>
    </section>
</div>

<style>
    *{
        margin:0;
        padding:0;
        box-sizing:border-box;
    }

    h1{
        text-align:center;
    }

    p{
        margin:0;
    }

    .product-box{
        margin-top:40px;
        height:auto;
        overflow: hidden;
        position:rerative;
        zoom:1;
    }

    .left{
        width:50%;
        float:left;
        border-right:2px solid #222;
        display:flex;
    }

    

    .product{
        width:80%;
        height:230px;
        display:flex;
        justify-content: space-around;
        text-align:justify;
        margin-left:13%;
        clear:both;
    }

    .image{
        height:160px;
        width:160px;
        margin-top:2%;
        display:inline-block;
    }

    .text{
        float:right;
        width:60%;
    }

    .song{
        font-size:25px;
        text-align:center;
        overflow: scroll;
        white-space: pre;
    }

    .artist{
        font-size:18px;
        text-align:center;
    }

    .status{
        font-size:16px;
        text-align:center;
    }

    .price{
        font-size:20px;
        text-align:center;
    }

    .status-box{
        width:40%;
        margin:0 auto;
        padding: 0.5em 1em;
        background: -moz-linear-gradient(#ffb03c, #ff708d);
        background: -webkit-linear-gradient(#ffb03c, #ff708d);
        background: linear-gradient(to right, #ffb03c, #ff708d);
        border-radius:70%;
        color: #FFF;
    }

    .paging{
        text-align:center;
        height: 60px;
    }
    .back_product{
        margin:40px auto;
        text-align:center;
        width:20%;
        padding: 0.5em 1em;
        background: purple;
        border-radius:10%;
    }
    .back_product>a{
        color:#fff;
    }

</style>


