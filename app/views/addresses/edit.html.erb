<div class="field">
	<%= form_for @address, :url => {:action => :update} do |f| %>
		<div class="field">
			<%= f.label :郵便番号 %>
			<%= f.text_field :address_number %>
		</div>
		<div class="field">
			<%= f.label :都道府県 %>
			<%= f.text_field :prefecture %>
		</div>
		<div class="field">
			<%= f.label :市区町村 %>
			<%= f.text_field :municipality %>
		</div>
		<div class="field">
			<%= f.label :建物 %>
			<%= f.text_field :building %>
		</div>
		<div class="links">
			<%= f.submit '変更する' %>
		</div>
	<% end %>
</div>