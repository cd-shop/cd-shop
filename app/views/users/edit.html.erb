<div class="user_edit", id="okan">
  <div class="border-edit">
    <%= form_for @user do |f| %>
          <div class= "field">
            <%= f.label :名前 %><br>
            <%= f.text_field :name, :placeholder => "例）おちんぽ 太郎" %>
          </div>

          <div class= "field">
            <%= f.label :フリガナ %><br>
            <%= f.text_field :name_kana, :placeholder => "例）オチンポ タロウ" %>
          </div>

          <div class= "field">
            <%= f.label :電話番号 %><br>
            <%= f.text_field :tellnumber, :placeholder => "ハイフンなしで入力してください" %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "例）aaa@gmail.com" %>
          </div>

          <div class="links">
            <%= link_to_add_association '住所を追加', f, :addresses, id:"address_nest" %>
          </div>

          <%= f.fields_for :addresses do |address| %>
            <%= render 'address_fields', f: address %>
          <% end %>

          <div class="actions">
            <%= f.submit "変更する",class:"btn btn-success" %>
          </div>
    <% end %>
    </div>
</div>

<style>
.user_edit {
  text-align: center;
    margin:30px auto;
    width: 700px;
    height: 500px;
}

.user_edit-ex {
    text-align: center;
    border: solid 2px gray;
    margin:30px auto;
    width: 700px;
    height: 800px;
}
.border-edit {
    margin:80px auto;

}

</style>