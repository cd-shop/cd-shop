<!DOCTYPE html>
<html>
  <head>
    <title>Yukibutu</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <%= link_to "log out", destroy_user_session_path, method: :delete %>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-right">
          <ul>
              <li><%= link_to 'CD一覧 ', products_path, class: 'glyphicon glyphicon-home cds' %></li>
            <% if user_signed_in? %>
              <li><%= link_to '会員登録 ', new_user_registration_path, class: 'glyphicon glyphicon-home sign_up' %></li>
              <li><%= link_to 'ログイン ', class: 'glyphicon glyphicon-home sign_in' %></li>
            <% else %>
              <li><%= link_to 'ユーザー ', practices_index_path, class: 'glyphicon glyphicon-home users' %></li>
              <li><%= link_to 'カート ', practices_index_path, class: 'glyphicon glyphicon-home carts' %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header><!-- /header -->
    <%= yield %>
  </body>
</html>
