    <h1>商品を購入しますか？</h1>
    <section class="product-box">
    <% @cart_products.each do |cart| %>
    <section class="left">
        <span class="product">

            <span class="image">
                <%= attachment_image_tag cart.product, :image, fallback:"no_image.png", size:"50x50" %>
            </span>
            <span class="text">
                <p class="song"><%= cart.product.productname %></p>
                <p class="artist"><%= cart.product.artist.artistname %></p>
                <p class="price">¥<%= cart.product.price %></p>
                <p class="price"><%= cart.purchase_number %>枚</p>
                <p class="delete"><%= link_to "カートから削除", product_cart_product_path(cart.product_id, cart.id), method: :delete, data:{confirm: "カートからこの商品を削除しますか？"}%></p>
            </span>
        </span>
    </section>
    <% end %>
    </section>
<%# カート内商品があるかどうかで分岐 %>
    <% if @cart_products.blank?  %>
        <p class="no_buy"><%= link_to "カートに商品を追加してください",products_path %></p>
        <% else %>

<div class="select_address">
    <%= form_with(url: cart_product_orders_path(@cart_products),method: :post) do |form|%>
        <% current_user.addresses.each do |address| %>
            <%= form.radio_button :address_id, address.id %>
            <%= address.address_number %>
            <%= address.prefecture %>
            <%= address.municipality %>
            <%= address.building%><br>
        <% end %>

        <%= form.submit "aaa"%>
    <% end %>
</div>



            <p class="buy"><%= link_to "注文に進む",cart_product_orders_path(@cart_products),method: :post %></p>
            <p class="back_product"><%= link_to "商品一覧に戻る",products_path %></p>
        <% end %>


